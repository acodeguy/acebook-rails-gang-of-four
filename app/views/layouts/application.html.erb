<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top bg-light">
      <div class="container">
        <a class='navbar-brand' href="/">Acebook</a>
        <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
      </div>
    </nav>
  <div class='body-body'>
  <div class='body-content'>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    </div>
    </div>
  </body>
</html>
